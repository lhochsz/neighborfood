<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>
</head>

<body class="container-fluid">
  <header>
    <% include ../partials/header %>
  </header>

  <main>
    <div>
      <h3>MyFridge:</h3>
      <p class="noItems"></p>
      <% fridgeItems.forEach(function(fridgeItem) { %>
        <h4>
          <% if (fridgeItem) { %>
              <form method="POST" action="/fridge/<%= fridgeItem._id %>?_method=DELETE">
                <a href="/fridge/<%= fridgeItem._id %>">
                  <%= fridgeItem.food + ' - ' + fridgeItem.amount + ' - ' + fridgeItem.neighborhood %>
                </a>
                <button type="submit" class="btn btn-xs btn-danger">Delete</button>
              </form>
          <% } else if (!fridgeItem) { %>
                <% $(".noItems").innerHTML("No items") %>
        </h4>
      <% }; %>
      <% }); %>
    </div>
    <a href="/fridge/new" class="btn btn-primary">New</a>
  </main>

  <footer>
    <% include ../partials/footer %>
  </footer>
</body>
</html>
